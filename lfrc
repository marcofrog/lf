## Basic configuration
set previewer ctpv
set cleaner ctpvclear
&ctpv -s $id
&ctpvquit $idset hidden true
set ignorecase true

## Delete script
cmd delete ${{
    set -f
    printf "$fx\n\n"
    printf "Delete? [y/N]"
    read -n1 ans
    [ "$ans" = "y" ] && rm -rf $fx
}}

cmd changeDir ${{
	cd $f
}}

## FZF
cmd fzf ${{

	# find . -type d -print | fzf | $fx
	# if [$fx -ne ""]; then
	# cd $fx && exec lf
	# fi
	
	selected_directory=$(find . -type d -print | fzf)
	if [ -n "$selected_directory" ]; then
    	cd "$selected_directory" && exec lf
	fi

}}


## Mappings
map f 
map f fzf
map D delete
map s push :shell<enter>$SHELL<enter>
map <s-up> half-up
map <s-down> half-down
map . set hidden!
map e $$EDITOR "$f"
